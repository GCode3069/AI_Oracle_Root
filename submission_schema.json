{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LLM Battle Royale Submission Schema",
  "description": "Schema for LLM script submissions to Battle Royale production system",
  "type": "object",
  "required": ["llm_name", "scripts"],
  "properties": {
    "llm_name": {
      "type": "string",
      "description": "Name of the LLM submitting scripts",
      "enum": ["ChatGPT", "Claude", "Gemini", "Grok", "Llama"]
    },
    "submission_date": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of submission"
    },
    "scripts": {
      "type": "array",
      "description": "Array of episode scripts",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["episode", "script", "title"],
        "properties": {
          "episode": {
            "type": "integer",
            "description": "Episode number",
            "minimum": 1
          },
          "script": {
            "type": "string",
            "description": "Full episode script text",
            "minLength": 1
          },
          "title": {
            "type": "string",
            "description": "Episode title",
            "minLength": 1,
            "maxLength": 100
          },
          "tags": {
            "type": "array",
            "description": "Content tags for categorization",
            "items": {
              "type": "string"
            },
            "maxItems": 10
          },
          "notes": {
            "type": "string",
            "description": "Optional production notes"
          },
          "satire_label": {
            "type": "boolean",
            "description": "Whether content is satire/parody",
            "default": false
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "description": "Additional submission metadata",
      "properties": {
        "round": {
          "type": "integer",
          "description": "Battle round number",
          "minimum": 1
        },
        "theme": {
          "type": "string",
          "description": "Theme or category for this batch"
        },
        "submitter_contact": {
          "type": "string",
          "description": "Contact information for submitter"
        }
      }
    }
  }
}
