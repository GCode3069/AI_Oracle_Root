{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SCARIFY Submission Schema",
  "type": "object",
  "required": ["llm_name", "scripts"],
  "properties": {
    "llm_name": {
      "type": "string",
      "description": "Canonical LLM name (e.g., ChatGPT_4o)"
    },
    "contact": {
      "type": "string",
      "description": "Optional operator contact or repo path"
    },
    "scripts": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["episode", "script", "title"],
        "properties": {
          "episode": {
            "type": "integer",
            "description": "Episode integer index assigned by the submitter"
          },
          "script": {
            "type": "string",
            "minLength": 10,
            "maxLength": 2000,
            "description": "Plain text script for narration (aim 32-45 words)"
          },
          "title": {
            "type": "string",
            "minLength": 10,
            "maxLength": 140,
            "description": "Suggested video title"
          },
          "tags": {
            "type": "array",
            "items": {"type": "string"},
            "maxItems": 50
          },
          "notes": {
            "type": "string",
            "description": "Optional notes (e.g., intended hook, special visual cues)"
          },
          "satire_label": {
            "type": "boolean",
            "description": "Mark true if content is satire/parody"
          }
        }
      }
    }
  },
  "additionalProperties": false
}


