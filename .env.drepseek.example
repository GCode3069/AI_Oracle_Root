# Drepseek MCP Server Environment Configuration
# Copy this file to .env.drepseek and fill in your actual values

# =============================================================================
# DREPSEEK API CONFIGURATION
# =============================================================================
DREPSEEK_API_KEY=your_api_key_here
DREPSEEK_BASE_URL=https://api.drepseek.com
DREPSEEK_NETWORK=mainnet  # Options: mainnet, testnet

# =============================================================================
# MCP SERVER CONFIGURATION
# =============================================================================
MCP_SERVER_NAME=drepseek-mcp
MCP_SERVER_VERSION=1.0.0
MCP_TRANSPORT=stdio  # Options: stdio, sse, ws
MCP_HOST=localhost
MCP_PORT=8080

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_TYPE=sqlite  # Options: sqlite, postgresql, mysql
DB_PATH=mcp_server/drepseek_data.db

# For PostgreSQL/MySQL (uncomment if needed):
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=drepseek_mcp
# DB_USER=drepseek
# DB_PASSWORD=your_db_password

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CACHE_ENABLED=true
CACHE_BACKEND=memory  # Options: memory, redis, file
CACHE_TTL=600  # seconds
CACHE_MAX_SIZE=1000  # entries

# Redis cache (if using redis backend):
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info  # Options: debug, info, warning, error, critical
LOG_FORMAT=json  # Options: json, text
LOG_FILE_PATH=logs/drepseek_mcp.log

# =============================================================================
# MONITORING & HEALTH CHECKS
# =============================================================================
MONITORING_ENABLED=true
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=60

# Prometheus metrics (optional):
# PROMETHEUS_ENABLED=false
# PROMETHEUS_PORT=9090

# =============================================================================
# NOTIFICATIONS (OPTIONAL)
# =============================================================================
NOTIFICATIONS_ENABLED=false

# Slack notifications:
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
# SLACK_CHANNEL=#drepseek-alerts

# Email notifications:
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@example.com
# SMTP_PASSWORD=your_email_password
# EMAIL_FROM=alerts@drepseek.com
# EMAIL_TO=admin@example.com

# Webhook notifications:
# WEBHOOK_URL=https://your-webhook-endpoint.com/alerts
# WEBHOOK_TOKEN=your_webhook_token

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
DEBUG=false
DEVELOPMENT_MODE=false
MOCK_DATA=false
VERBOSE_ERRORS=true

# =============================================================================
# SECURITY
# =============================================================================
REQUIRE_AUTH=false
API_KEY_HEADER=X-API-Key
ALLOWED_ORIGINS=*

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_GOVERNANCE=true
FEATURE_VOTING=true
FEATURE_ANALYTICS=true
FEATURE_DELEGATION_TRACKING=true
FEATURE_AUTO_REFRESH=true
REFRESH_INTERVAL=300  # seconds
